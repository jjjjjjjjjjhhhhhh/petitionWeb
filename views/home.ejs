                        <li class="pad_t_b_1 fl tc w100 title b_line">청원기간</li>
                        <li class="pad_t_b_1 fl tc w100 title b_line">참여인원</li>
                    </ul>
                    <!--- 리스트 --->

                    <% for(var i=posts.length -1 ;i>= 0; i--){ %>


                        <ul class="board">
                            <li class="pad_t_b_15 fl tc w70 list lt_line">
                                <%= posts.length - i %>
                            </li>
                            <li class="pad_t_b_15 fl tc w120 list lt_line blue">답변대기</li>
                            <li class="pad_t_b_15 fl tc w500 list lt_line">
                                <a href="/detail/<%= posts[i]._id %>">
                                    <%= posts[i].청원제목%>
                                </a>
                            </li>

                            <li class="pad_t_b_15 fl tc w100 list lt_line">
                                <%= posts[i].청원시작%>~<%= posts[i].청원마감%>
                            </li>
                            <li class="pad_t_b_15 fl tc w100 list  lt_line blue">
                                <%= posts[i].liked%>
                            </li>
                        </ul>
                        <% if(posts.length - 5==i) { %>
                            <% break %>
                                <%}%>

                                    <% } %>

                </div>

                <div class="l" style="margin-bottom: 180px; margin-top: 50px;">

                    <a class="pge" href="/petitionlist/1" id="next2" style="background-color: #2962FF;">더보기</a>

                </div>

            </div>
        </div>
</div>
